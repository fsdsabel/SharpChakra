<Project Sdk="Microsoft.NET.Sdk">

   <PropertyGroup>
      <TargetFrameworks>net45;net46</TargetFrameworks>
      <Product>SharpChakra.Extensions</Product>
      <Version>2.0.0</Version>
      <PackageProjectUrl>https://github.com/mcdis/SharpChakra</PackageProjectUrl>
      <PackageIconUrl>https://raw.githubusercontent.com/mcdis/SharpChakra/master/icon.png</PackageIconUrl>
      <Description>Slim managed any cpu .net wrapper of Microsoft.ChakraCore. Extensions</Description>
      <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
      <SignAssembly>true</SignAssembly>
      <AssemblyOriginatorKeyFile>..\sharpchakra.snk</AssemblyOriginatorKeyFile>
      <PackageId>SharpChakra.Extensions.Signed</PackageId>
   </PropertyGroup>

   <ItemGroup>
     <PackageReference Include="Microsoft.ChakraCore" Version="1.8.3" />
     <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
   </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharpChakra.Json\SharpChakra.Json.csproj" />
    <ProjectReference Include="..\SharpChakra\SharpChakra.csproj" />
  </ItemGroup>
</Project>
